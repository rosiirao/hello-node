{
  "name": "dev-server",
  "version": "1.1.0",
  "repository": "rosiirao/hello-node",
  "homepage": "https://github.com/rosiirao/hello-node",
  "description": "for develop front-end project",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "node  --experimental-modules --experimental-json-modules --experimental-specifier-resolution=node dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-sass\" \"npm:watch-ts\" \"npm:watch-node\"",
    "watch-node": "nodemon --delay 2 --verbose --watch dist --watch public --experimental-modules --experimental-json-modules --experimental-specifier-resolution=node dist/main.js",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/main.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-sass\" \"npm:watch-ts\" \"npm:serve-debug\""
  },
  "type": "module",
  "keywords": [
    "dev",
    "front-end"
  ],
  "author": "yu",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^9.0.1",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "grant-koa": "^5.1.1",
    "koa": "^2.12.0",
    "koa-body": "^4.1.3",
    "koa-conditional-get": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-files": "^1.0.3",
    "koa-session": "^6.0.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "@types/config": "0.0.36",
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.2.3",
    "@types/koa": "^2.11.3",
    "@types/koa-session": "^5.10.2",
    "@types/koa__router": "^8.0.2",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.2.0",
    "eslint-plugin-jest": "^23.13.2",
    "jest": "^26.0.1",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "puppeteer": "^3.3.0",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
