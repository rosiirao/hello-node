{
  "name": "dev-server",
  "version": "1.0.0",
  "repository": "rosiirao/hello-node",
  "homepage": "https://github.com/rosiirao/hello-node",
  "description": "for develop front-end project",
  "main": "./index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "node  --experimental-modules --experimental-json-modules --experimental-specifier-resolution=node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-sass\" \"npm:watch-ts\" \"npm:watch-node\"",
    "watch-node": "nodemon --delay 2 --verbose --watch dist --watch public --experimental-modules --experimental-json-modules --experimental-specifier-resolution=node dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-sass\" \"npm:watch-ts\" \"npm:serve-debug\""
  },
  "type": "module",
  "keywords": [
    "dev",
    "front-end"
  ],
  "author": "yu",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^8.0.8",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "grant-koa": "^5.0.1",
    "http-proxy-middleware": "^1.0.3",
    "koa": "^2.11.0",
    "koa-conditional-get": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-etag": "^3.0.0",
    "koa-files": "^1.0.1",
    "koa-session": "^6.0.0",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "@types/config": "0.0.36",
    "@types/koa": "^2.11.3",
    "@types/koa-session": "^5.10.2",
    "@types/koa__router": "^8.0.2",
    "@types/shelljs": "^0.8.7",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "shelljs": "^0.8.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
